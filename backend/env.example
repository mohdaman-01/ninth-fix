# Environment Configuration for Certificate Verification System

# Application Settings
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production
VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/certificate_verification

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# File Storage Settings
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# S3/MinIO Configuration (Optional)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=certificates

# OCR Configuration
TESSERACT_CMD=/usr/bin/tesseract
OCR_LANGUAGES=eng

# AI/ML Configuration (Optional)
AI_MODEL_PATH=/path/to/your/model
AI_MODEL_VERSION=1.0

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=True

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Verification Settings
VERIFICATION_THRESHOLD=0.8
MAX_VERIFICATION_ATTEMPTS=5
